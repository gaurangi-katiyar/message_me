
<h4 class="ui center aligned large icon header"> Welcome to MessageMe- <em>a complete chat app</em></h4>
  <h4 class="ui center aligned large icon header">
    <i class="circular orange power off icon"></i>
    Log in to continue
  </h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :Username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your email address" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :Password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Log in", class: "ui orange submit button" %>
      <%end%>
    </div>
    <div class="middle aligned column">
      <div class="ui orange big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>